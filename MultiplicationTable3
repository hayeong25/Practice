package me;

public class For문구구단3 {

	public static void main(String[] args) {

		for(int i = 1; i < 4; i++) {
			for(int j = 1; j < 10; j++) {
				for(int k = i; k <= i + 6; k = k + 3) {
					System.out.printf("%d * %d = %d\t\t", k, j, k*j);
				}
				System.out.println();
			}
			System.out.println();
		}
	}

}
